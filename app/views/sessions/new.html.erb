<ul>
	<li><%= link_to "Home", root_path %></li> 
</ul>
<%= form_for :session, url: sign_in_path do |f| %>
	<div class="field">
		<%= f.label :login %><br /> 
		<%= f.text_field :login %> 
	</div> 

	<div class="field"> 
		<%= f.label :password %><br /> 
		<%= f.password_field :password, autocomplete: "off" %> 
	</div> 
	<div class="actions"> 
		<%= f.submit "Log in" %> 
	</div> 

	<p>New user? <%= link_to "Sign up now!", new_user_path %></p> 
<% end %>
