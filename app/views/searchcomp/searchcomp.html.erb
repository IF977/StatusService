<%= render 'header' %>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <!-- Campo de pesquisa da pagina de pesquisa-->
            
            <%= form_tag(search_comp_path, :method => :get) do %>
                <div class="input-group" id="searchdiv">
                    <%= text_field_tag 'search', nil, placeholder: 'Pesquise uma empresa..', class: 'form-control' %>
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit">
                            <i class="fa fa-search"></i>
                        </button>
                    </div>
                </div>
            <% end %>
            
            <!--<div class="input-group" id="searchdiv">
                    <input id="search" name="search" type="text" placeholder="Pesquise uma empresa.." class="form-control"/>
                    <input id="search" name="search" placeholder="Pesquise uma empresa.." type="text" class="form-control" />
                    <input name="commit" type="submit" value= <span class="input-group-addon">
                        <i class="fa fa-search"></i>
                    </span>/>
            </div>-->
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-lg-12">
        <!-- Campo de resultados de pesquisa da pagina de pesquisa-->
            <table> 
    			<thead> 
    				<tr> 
    					<th>Nome</th> 
    					<th></th> 
    				</tr> 
    			</thead> 
    			<tbody> 
    				<% @search.each do |company| %> 
        				<tr> 
        					<td><%= link_to company.nome.upcase, user_avaliacoes_path(current_user.id,company.id) %></td>
        				</tr> 
    				<%end%> 
    			</tbody> 
    		</table> 
        </div>
    </div>
</div>
