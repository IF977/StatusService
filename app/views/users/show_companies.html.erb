<%= render 'header' %>
<ol class="breadcrumb">
  <li><a href=<%="/users/" << current_user.id.to_s%>>Home</a></li>
  <li class="active">Empresas</li>
</ol>
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
				<h1 class="page-header">Empresas </h1> 
				<table> 
					<thead> 
						<tr> 
							<th>Nome</th> 
							<th></th> 
						</tr> 
					</thead> 
					<tbody> 
						<% @companies.each do |company| %> 
						<tr> 
							<td><%= link_to company.nome.upcase, user_avaliacoes_path(current_user.id,company.id) %></td>
						</tr> 
						<%end%> 
					</tbody> 
				</table>
			</div>
		</div>
	</div>
</div>