<%= render 'header' %>
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
			    <h1 class="page-header">Reviews</h1>
                <h3><%= @question.nome %></h3>
                <!-- colocar a media embaixo ou de lado -->
				
				<h4>Coment√°rios</h4>
                <% @reviews.each do |r| %>
                  <p>
                    <strong>Comentario:</strong>
                    <%= r.comentario %>
                  </p>
                <% end %>
                
                <h4>Avalie essa pergunta:</h4>
                <%= form_for @question.reviews.build, url: user_reviews_path(current_user.id,@question.id) do |f| %>
                  <p>
                    <%= f.label :nota %><br>
                    <%= f.range_field(:nota, in: 1..5) %>
                  </p>
                  <p>
                    <%= f.label :comentario %><br>
                    <%= f.text_area :comentario %>
                  </p>
                  <p>
                    <%= f.submit %>
                  </p>
                <% end %>
				
			 </div>
	    </div>
	</div>
</div>