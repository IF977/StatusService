<%= render 'header' %>
<ol class="breadcrumb">
  <li><a href=<%="/users/" << current_user.id.to_s%>>Home</a></li>
  <li><a href=<%="/users/" << current_user.id.to_s << "/empresas"%>>Empresas</a></li>
  <li class="active">Avaliações</li>
</ol>
<div id="page-wrapper">
	<div class="container-fluid">
		<div class="row">
			<div class="col-lg-12">
			    <h1 class="page-header">Avaliações</h1>
                <table> 
					<thead> 
						<tr> 
							<th>Nome</th> 
							<th>Média</th>
							<th></th> 
						</tr> 
					</thead> 
					<tbody> 
						<% @exames.each do |exame| %> 
						<tr>
							<td><%= link_to exame.nome, user_perguntas_path(current_user.id, exame.id) %></td>
							<td><%=media_exame(exame) %></td>
						</tr> 
						<%end%> 
					</tbody> 
				</table> 			    
			 </div>
	    </div>
	</div>
</div>